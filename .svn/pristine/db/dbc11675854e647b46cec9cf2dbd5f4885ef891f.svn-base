<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
        <title>91搜墓网</title>
        <link rel="stylesheet" href="_BACKSTAGE_/layer/css/layui.css">
        <style type="text/css">
            .header-demo .logo {
                left: 18px;
            }
            .logo {
              position: absolute;
              left: 0;
              top: 16px;
              font-size: 22px;
              color: #fff;
            }

            .header .layui-nav {
              position: absolute;
              left: 202px;
              top: 0;
              padding: 0;
            }
        </style>
    </head>
    <body>
        <fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
            <legend>预览合同</legend>
        </fieldset>
        <div class="layui-form">
            <table class="layui-table">
                <colgroup>
                    <col width="10%">
                    <col width="23%">
                    <col width="10%">
                    <col width="23%">
                    <col width="10%">
                    <col width="23%">
                    <col>
                </colgroup>
                <tbody>
                    <tr>
                        <td>商家名称</td>
                        <td>{$data.show_store_name}</td>
                        <td>价格区间</td>
                        <td>
                            {notempty name="data.min_price"}{$data.min_price}万-{/notempty}
                            {notempty name="data.max_price"}-{$data.max_price}万{/notempty}
                        </td>
                        <td>商家地址</td>
                        <td>{$data.address}</td>
                    </tr>
                    <tr>
                        <td>合同名称</td>
                        <td>{$data.profile_name}</td>
                        <td>商家类型</td>
                        <td>{$data.Category["name"]}</td>
                        <td>地区(省市)</td>
                        <td>{$data.Province["name"]} / {$data.City["name"]}</td>
                    </tr>
                    <tr>
                        <td>所属集团</td>
                        <td>{$data.CategoryGroup["name"]}</td>
                        <td>商家会员</td>
                        <td>{$data.member_status}</td>
                        <td>合同时间</td>
                        <td>{$data.start_time|date="Y-m-d",###} 至 {$data.end_time|date="Y-m-d",###}</td>
                    </tr>
                    <tr>
                        <td>合同负责人</td>
                        <td>{$data.principal}</td>
                        <td>佣金</td>
                        <td>{$data.return_amount}</td>
                        <td>结算日期</td>
                        <td>{$data.settlement_time}</td>
                    </tr>
                    <tr>
                        <td>联系人</td>
                        <td>{$data.contact_man}</td>
                        <td>联系方式</td>
                        <td>
                            {notempty name="data.mobile"}{$data.mobile}{/notempty}
                            {notempty name="data.telephone"}/{$data.telephone}{/notempty}
                            {notempty name="data.fax"}/{$data.fax}{/notempty}
                        </td>
                        <td>接收时间</td>
                        <td>{$data.receive_time|date="Y-m-d",###}</td>
                    </tr>
                    <tr>
                        <td>创建时间</td>
                        <td>{$data.created_time|date="Y-m-d",###}</td>
                        <td>更新时间</td>
                        <td>{$data.updated_time|date="Y-m-d",###}</td>
                        <td>备注</td>
                        <td>{$data.remarks}</td>
                    </tr>
                    <tr>
                        <td>合同图片(点击放大)</td>
                        <td colspan="5">
                            {volist name="elecImage" id="vo"}
                                <img width="100px" src="{$vo.thumb_image}" image="{$vo.image}" class='zoomIn'/>
                            {/volist}
                        </td>
                    </tr>
                    <tr>
                        <td>价格图片(点击放大)</td>
                        <td colspan="5">
                            {volist name="priceImage" id="vo"}
                                <img width="100px" src="{$vo.thumb_image}" image="{$vo.image}" class='zoomIn'/>
                            {/volist}
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <!-- 放大图片弹框 -->
        <div id='zoomIn' style="display:none">
            <div  class="layui-form">
                <img id="zoomInImage" src="" width="100%" height="100%"/>
            </div>
        </div>
        <script src="_BACKSTAGE_/layer/layui.js"></script>
        <script>
            layui.use(['jquery','form'],function(){
                var $= layui.jquery;
                var form = layui.form();
                //放大图片
                $('.zoomIn').click(function(){
                    var src = $(this).attr('image');
                    $('#zoomInImage').attr('src',src);
                    layer.open({
                        closeBtn: 2,
                        type: 1, 
                        area: ['500px','500px'],
                        title:'查看图片',
                        scrollbar:false,
                        content: $('#zoomIn')
                    });
                });
            });
        </script>
    </body>
</html>
