    private function articletree($data,$id){
        $result = array();
        foreach($data as $val){
            if($val['pid'] == $id ){
                $val['child'] = array();
                $val['child'] = $this->articletree($data,$val['id']);
                $result[] = $val;
            }
            continue;
        }
        return $result;
    }
