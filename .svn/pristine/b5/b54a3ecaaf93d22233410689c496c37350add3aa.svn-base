{extend name='extra@main' /}
{block name='body'}
<fieldset class="layui-elem-field layui-field-title" style="margin-top: 10px;">
  <legend>退单列表</legend>
</fieldset>
<div class="layui-form-item">
 <form id="quickForm" method="get" class="form-horizontal" autocomplete="off" action='{:url("backlist")}'>
    <div class="layui-inline">
          <label class="layui-form-label">商家名称</label>
          <div class="layui-input-inline">
            <input type="text" name="store_name" autocomplete="off" class="layui-input">
          </div>
        </div>
        <div class="layui-inline">
          <label class="layui-form-label">手机号</label>
          <div class="layui-input-inline">
            <input type="tel" name="mobile" autocomplete="off" class="layui-input">
          </div>
        </div>
        <div class="layui-inline">
            <button class="layui-btn">搜索</button>
        </div>
    </div>
    </form>
<div class="layui-form">
    <table class="layui-table">
        <colgroup>
            <col width="10">
            <col width="100">
            <col width="200">
            <col width="80">
            <col width="80">
            <col width="80">
            <col width="80">
            <col width="120">
            <col width="120">
            <col width="100">
            <col width="60">
            <col width="80">
            <col width="60">
            <col width="150">
            <col>
        </colgroup>
        <thead>
            <tr>
                <th><input type="checkbox" name="" lay-skin="primary" lay-filter="allChoose"></th>
                <th>预约人<br>电话</th>
                <th>商家名称</th>
                <th>墓位<br>价格</th>
                <th>实收<br>佣金</th>
                <th>返现<br>金额</th>
                <th>应退金额<br>实退金额</th>
                <th>佣金支付时间</th>
                <th>申请退单时间</th>
                <th>退单<br>原因</th>
                <th>退单<br>状态</th>
                <th>跟踪人</th>
                <th>跟踪信息</th>
                <th>退单票据</th>
                <th>操作</th>
            </tr> 
        </thead>
        <tbody>
         {volist name="data" id="vo"}
            <tr>
                <td style="width:3%;"><input type="checkbox"  data-name="choice_id" value=
                "{$vo.id}" lay-skin="primary"></td>
                <td style="width:7%;">
                {empty name="vo['buyer']"}
                    {$vo.reservation_person}<br>{$vo.reservation_phone}
                {else /}
                    {$vo.buyer}<br>{$vo.mobile}
                {/empty}
                </td>
                <td style="width:14%;">{$vo.store_name}
                    {eq name="vo['store_status']" value="14"}
                        <span title="广告会员" style="color:red;">[广]</span>
                    {/eq}
                    {eq name="vo['store_status']" value="16"}
                        <span title="个人会员" style="color:red;">[个]</span>
                    {/eq}
                    {eq name="vo['store_status']" value="19"}
                        <span title="会员V" style="color:red;">[V]</span>
                    {/eq}
                    {eq name="vo['store_status']" value="20"}
                        <span title="商家会员" style="color:red;">[商]</span>
                    {/eq}
                </td>
                <td style="width:7%;">{$vo.tomb_price}</td>
                <td style="width:7%;">{$vo.paid_in_amount}</td>
                <td style="width:7%;">{$vo.return_fact_money}
                </td>
                <td style="width:7%;">
                    {notempty name="vo['back_money']"}
                        {$vo.back_money}<br>{$vo.back_fact_money}
                    {/notempty}
                </td>
                <td style="width:7%;">
                    {notempty name="vo['payfor_us_time']"}
                        {$vo.payfor_us_time|date='Y-m-d',###}
                    {/notempty}
                </td>
                <td style="width:7%;"> 
                    {notempty name="vo['back_apply_time']"}
                        {$vo.back_apply_time|date='Y-m-d',###}
                    {/notempty}
                </td>
                <td style="width:8%;">{$vo.back_reason}</td>
                <td style="width:5%;">{$status[$vo.status]}</td>
                <td style="width:6%;">  {volist name="order_flow" id="flowmans"}
                        {if condition="$key eq $vo['order_flow_id'] "}{$flowmans}{/if}
                    {/volist}
                </td>
                <td style="width:5%;"><a href="{:url('orders/Tomb/detail',array('orderId'=>$vo['id'],'items'=>'reVisit'))}">更新</a></td>
                <td style="width:5%;">
                {volist name="list" id="voo"}
                    {if condition="$voo['id'] eq $vo['id']"}
                        {if condition= "$voo['ordergravebill_count'] neq '0'"}
                            <span style="color:red;">有</span>
                            {else /}
                            无
                        {/if}
                    {/if}
                {/volist}
                </td>
                <td style="width:7%;"> 
                <a href="{:url('orders/Tomb/detail',array('orderId'=>$vo['id'],'items'=>'orderDetail'))}" style="margin-left:10px" title='详细信息'>
                <button class="layui-btn layui-btn-small" ><i class="layui-icon">&#xe615;</i></button>
                </a> 
                </td>
            </tr>
            {/volist}
        </tbody>
    </table> 
</div>
{$page}
{/block}
{block name='optJS'}
<script>


//页面层
layui.use('laydate', function(){
  var laydate = layui.laydate;
  
  var start = {
    min: laydate.now()
    ,max: '2099-06-16 23:59:59'
    ,istoday:true
    ,choose: function(datas){
      end.min = datas; //开始日选好后，重置结束日的最小日期
      end.start = datas //将结束日的初始值设定为开始日
    }
  };
  
  var end = {
    min: laydate.now()
    ,max: '2099-06-16 23:59:59'
    ,istoday: true
    ,choose: function(datas){
      start.max = datas; //结束日选好后，重置开始日的最大日期
    }
  };
  
});
layui.use(['jquery', 'layer'], function(){
    var $ = layui.jquery;
    var layer = layui.layer;
    $(".backspace").bind('click', function(){
         layer.confirm('您确定要撤回删除该订单吗?', {icon: 3, title:'提示'}, function(index){
         var id = $('.backspace').attr('data-orderId');
         $.ajax({
            url:"{:url('backspace')}",
            data:'id='+id,
            type:'post',
            success:function(d){
               var result = eval("("+d+")");
                if(result.flag==1){
                    layer.msg(result.msg);
                    window.location.reload();
                    
                }
            }
         });
         
       });
    });
     
});

</script>
{/block}

