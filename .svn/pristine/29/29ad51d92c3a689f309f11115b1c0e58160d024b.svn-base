{block name="optJS"}
<script> 
    layui.use('layer', function() {
        layui.use(['form', 'jquery', 'laypage'], function() {
            var $ = layui.jquery;
            var layer = layui.layer;
            $('.changpassword').on('click', function() {
                var id = $(this).attr('data-id');
                layer.prompt({
                    formType: 3,
                    value: '',
                    title: '请输入新的密码',
                    area: ['100px', '100px']
                }, function(value, index, elem) {
                    //将value传入changepassword
                    $.ajax({
                        url: '{:url("store/Admin/editPassword")}',
                        data: {
                            'id': id,
                            'pwd': value
                        },
                        type: 'post',
                        success: function(d) {
                            var result = eval("(" + d + ")");
                            if (result.flag == 1) {
                                layer.msg(result.msg);
                            }
                        }
                    });
                    layer.close(index);
                });
            });

            //启用和禁用方法
            $('.qiyong').on('click', function() {
                var status = $(this).attr('data-status');
                var id = $(this).attr('data-id');
                var layer = layui.layer;
                $.ajax({
                    url: "{:url('store/Admin/changeStatus')}",
                    type: 'post',
                    data: {
                        'status': status,
                        'id': id
                    },
                    success: function(d) {
                        var result = eval("(" + d + ")");
                        if (result.flag == 1) {
                            layer.msg(result.msg,{icon:1,time:2000},function(){
                              window.location.reload();//刷新当前页面.
                            });
                        }
                    }
                })
            });

            //弹出添加管理人员模态框
            $('.addPerson').click(function() {
                layer.open({
                    closeBtn: 2,
                    type: 1,
                    area: '500px',
                    title: '添加人员',
                    content: $('#motai'),
                });
            });
            //提交添加管理人员信息


            $('.addpersonsubmit').click(function() {
                var name = $("#data-form input[name='name']").val();
                var login_name = $("#data-form input[name='login_name']").val();
                var pwd = $("#data-form input[name='pwd']").val();
                var mobile = $("#data-form input[name='mobile']").val();
                var email = $("#data-form input[name='email']").val();

                if (name.length < 1) {
                    layer.msg('请填写用户名称');
                    return false;
                }
                if (login_name.length < 1) {
                    layer.msg('请填登陆账号');
                    return false;
                }
                if (pwd.length < 1) {
                    layer.msg('请填写用户密码');
                    return false;
                }
                if (mobile.length < 1) {
                    layer.msg('请填写用户手机号');
                    return false;
                }
                if (email.length < 1) {
                    layer.msg('请填写用户邮箱');
                    return false;
                }
                var From = $('#data-form').serialize();
                $.ajax({
                    url: "{:url('addPerson')}",
                    data: From,
                    type: 'post',
                    success: function(result) {
                        var d = eval("(" + result + ")");
                        if (d.flag == 1) {
                            layer.msg(result.msg,{icon:1,time:2000},function(){
                              window.location.reload();//刷新当前页面.
                            });
                        } else {
                            layer.msg(d.msg);
                        }
                    }
                });
            });

            /**编辑人员信息**/
            $('.editorAdmin').click(function() {
                var id = $(this).attr('data-id');
                $.ajax({
                    url: "{:url('editorAdmin')}",
                    type: 'get',
                    data: 'id=' + id,
                    success: function(d) {
                        var result = eval("(" + d + ")");
                        if (result.flag == 1) {
                            var data = result.data;
                            $('#name').val(data.name);
                            $('#login_name').val(data.login_name);
                            $('#mobile').val(data.mobile);
                            $('#email').val(data.email);
                            $('#remark').val(data.remark);
                            $('#editid').val(data.id);
                        }
                        layer.open({
                            closeBtn: 2,
                            type: 1,
                            area: '500px',
                            title: '编辑人员信息',
                            content: $('#editmotai'),
                        });
                    }
                });
            });

            //添加编辑人员信息表单提交
            $('.editsubmit').click(function() {
               var name = $("#editdata-form input[name='name']").val();
                var login_name = $("#editdata-form input[name='login_name']").val();
                var mobile = $("#editdata-form input[name='mobile']").val();
                var email = $("#editdata-form input[name='email']").val();

                if (name.length < 1) {
                    layer.msg('请填写用户名称');
                    return false;
                }
                if (login_name.length < 1) {
                    layer.msg('请填登陆账号');
                    return false;
                }
                
                if (mobile.length < 1) {
                    layer.msg('请填写用户手机号');
                    return false;
                }
                if (email.length < 1) {
                    layer.msg('请填写用户邮箱');
                    return false;
                }
                var From = $('#editdata-form').serialize();
                $.ajax({
                    url: "{:url('editorAdmin')}",
                    type: 'POST',
                    data: From,
                    success: function(d) {
                        var result = eval("(" + d + ")");
                        if (result.flag == 3) {
                            layer.msg(result.msg,{icon:1,time:2000},function(){
                              window.location.reload();//刷新当前页面.
                            });
                        } else {
                            layer.msg(result.msg);
                        }

                    }
                });
            });


        });
    });


</script>
{/block}