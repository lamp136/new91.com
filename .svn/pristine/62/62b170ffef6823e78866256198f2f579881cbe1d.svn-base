{extend name='extra@main' /}
{block name='body'}
    
<!-- contain -->
<div class="contain contain_pdsize">

    <!-- 面包屑导航 -->
    <div class="breadcrumb">
        <ul>
            <li><a href="index.html">首页</a></li>
            <li class="jt">></li>
            <li>殡葬礼仪</li>
        </ul>
    </div><!-- breadcrumb End -->
    
    <!-- 左侧内容 -->
    <div class="leftcontain ">

        <!-- 筛选条件 -->
        <div class="sifting">

            <!-- 筛选条件结果显示 -->
            <div class="criteria">
                <ul>
                    <li class="sif">所有分类</li>
                    <li>></li>
                    <li class="if">昌平区<span></span></li>
                    <li class="if">不限<span></span></li>
                    <li class="number">共<span> 100 </span>结果</li>
                </ul>
            </div>

            <!--所在区域 -->
            <div class="sifting_main clearfix">
                <span>所在区域：</span>
                <ul>
                    <li class="led"><a href="#">不限</a></li>
                    {volist name='city' id='vo'}
                    <li ><a href="{:url('rite/Rite/lists',['city'=>$vo.id,'length'=>$Think.get.length])}">{$vo.name}</a></li>
                    {/volist}
                </ul>
            </div>

            <!-- 距离市区 -->
            <div class="sifting_main clearfix">
                <span>距离市区：</span>
                <ul>
                    <li class="led"><a href="">不限</a></li>
                    {volist name='Think.config.store_length' id='vo'}
                        <li><a href="{:url('rite/Rite/lists',['city'=>'5','length'=>$vo])}">{$vo}公里</a></li>
                    {/volist}
                </ul>
            </div>
            
        </div><!-- sifting筛选条件结束 -->

        <!-- 陵园列表 -->
        <div class="cemetery_list funeralparlour_list etiquette_list">

            <!-- 殡葬礼仪内容1 -->
            {volist name='data' id='vo'}
            <div class="cemetery_list_box">
                <div class="cemetery_list_main funeralparlour_list_main etiquette_list_main clearfix">
                    <!-- 图片 -->
                    <div class="cemetery_list_main_img">
                        <a href="{:url('rite/Rite/detail',['id'=>$vo.id])}"><img src="{$vo.thumb_image}" alt="{$vo.name}"/></a>
                    </div>
                    <!-- 信息 -->
                    <div class="funeralparlour_list_main_info etiquette_list_main_info">
                        <h2 class="clearfix"><a href="rite/detail/{$vo.id}">{$vo.name}</a></h2>
                        <p><span>服务商地址：</span>{$vo.address}</p>
                        <p><span>服务热线：</span><span class="phone">{$vo.phone}</span></p>
                        <p><span>浏览量：</span><span class="num">{$vo.hits}</span></p>
                        <p><span>预约量：</span><span class="yunum">{$vo.order_grave_count}</span></p>
                    </div>
                    <!-- 价格 -->
                    <div class="cemetery_list_main_price etiquette_list_main_price">
                        <a class="buttonlv" href="etiquette_detail.html">立即预约</a>
                    </div>
                </div><!-- cemetery_list_main End -->
            </div><!-- cemetery_list_box 殡葬礼仪内容 End -->
            {/volist}
            <!-- 分页 -->
            <div class="paging">
                {$page}
            </div><!-- paging 分页 End -->

        </div><!-- cemetery_list 陵园列表 End -->

    </div><!-- leftcontain End -->
    
    <!-- 右侧内容 -->
    <div class="rightcontain">
        
        <!-- 预约服务商 -->
        <div class="subscribetomb cem_margin_bottom">
            <h2>预约服务商</h2>
            <input class="tet" type="text" value="" placeholder="您的姓名" />
            <input class="tet" type="text" value="" placeholder="您的电话" />
            <a class="yubtn" href="#">立即预约</a>
            <p>免费拨打<span>400-618-9191</span></p>
        </div>
        
        <!-- 服务商排行榜 -->
        <div class="ranking_list cem_margin_bottom">
            <h3>服务商排行榜</h3>
            <div class="ranking_list_main">
                <h4>排名<span>名称</span></h4>
                <ul>
                    {volist name='store' id='vo' offset="0" length='6'}
                        {if  condition='$key eq 0'}
                            <li class="first clearfix">
                                <a href="#">
                                    <img src="_WEB_/images/ranking_list_img.png"/>
                                    <div class="txt">
                                        <h5>{$vo.name}</h5>
                                        <p class="yyuenum">预约量：{$vo.order_grave_count}</p>
                                    </div>
                                </a>
                            </li>
                        {else/} 
                            <li class="clearfix">
                                <a href="#">
                                    <span>{$key+1}</span>
                                    <h5>{$vo.name}</h5>
                                </a>
                            </li>
                        {/if}
                    {/volist}
                </ul>
            </div>
            <p class="wp">本排行榜根据陵园综合情况不定期更新</p>
        </div><!-- ranking_list 服务商排行榜 End -->
        
        <!--广告位-->
        <div class="advertising cem_margin_bottom">
            <a href="#"><img src="_WEB_/images/advertising_img.jpg"/></a>
        </div> <!-- advertising 广告位 End-->
        
        <!--白事常识-->
        <div class="policies">
            <h2>白事常识</h2>
            <ul>
            {volist name='$bscs' id='vo'}
                <li><a href="#">{$vo.title}</a></li>
            {/volist}
            </ul>
        </div><!-- policies 白事常识 End-->

    </div><!-- leftcontain End -->

    <div class="clear"></div>

</div><!-- contain End -->
{/block}
