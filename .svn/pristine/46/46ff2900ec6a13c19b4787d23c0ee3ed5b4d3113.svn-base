{block name='optJS'}
<script>
layui.use(['jquery', 'form','laypage'], function() {
    var $ = layui.jquery;
    var form = layui.form();
    //摸态框
    $('.add').click(function() {
        layer.open({
            closeBtn: 2,
            type: 1,
            area: '500px',
            title: '添加园区',
            content: $('#form-add'),
        });
    });

    //添加表单提交
    $('#submit').bind('click', function() {

        //表单验证
        var name = $("#data-form input[name='info[zone_name]']").val();
        if(name.length<1){
            layer.msg('请填写园区名称');
            return false;
        }
        //加载层
        layer.open({
            type:3,
            success: function(layero, index){  
                var dataFrom = new FormData(document.getElementById("data-form"));
                $.ajax({
                    url: "{:url('savetombzone')}",
                    type: 'POST',
                    data: dataFrom,
                    processData: false,
                    contentType: false,
                    dataType: 'json',
                    success: function(d) {
                        layer.close(index);
                        if (d.flg == 1) {
                            layer.msg(d.msg, {icon: 1});
                            window.location.reload();
                        } else {
                            layer.msg(d.msg, {icon: 1});
                        }

                    }
                });
            }
        });
    });

    //编辑园区
    $('.update').click(function() {
        var id = $(this).attr('id');
        $.ajax({
            url: "{:url('edittombzone')}",
            type: 'get',
            data: {id:id},
            dataType: 'json',
            success: function(d) {
                if (d.flg == 1) {
                    var data = d.msg;
                    $("#form-update input[name='info[store_sn]']").val(data.store_sn);
                    $("#form-update input[name='info[zone_name]']").val(data.zone_name);
                    $("#form-update input[name='info[zone_name]']").val(data.zone_name);
                    $("#form-update textarea[name='info[content]']").val(data.content);

                    $("#form-update input[name='info[status]'][value=" + data.status + "]").attr('checked', true);
                   
                    $("input[name='id']").val(data.id);
                    form.render();

                    layer.open({
                        closeBtn: 2,
                        type: 1,
                        area: '500px',
                        title: '编辑园区',
                        content: $('#form-update'),
                    });
                }
            }
        });
    });

    //提交编辑
    $('#submit-update').bind('click', function() {
        //表单验证
        var name = $("#data-update input[name='info[zone_name]']").val();
        if(name.length<1){
            layer.msg('请填写园区名称');
            return false;
        }
        //加载层
        layer.open({
            type:3,
            success: function(layero, index){
                var dataFrom = new FormData(document.getElementById("data-update"));
                $.ajax({
                    url: "{:url('edittombzone')}",
                    type: 'POST',
                    data: dataFrom,
                    processData: false,
                    contentType: false,
                    dataType: 'json',
                    success: function(d) {
                        if (d.flg == 1) {
                            layer.msg(d.msg, {
                                icon: 1
                            });
                        } else {
                            layer.msg(d.msg, {
                                icon: 1
                            });
                        }
                        // layer.closeAll(); //疯狂模式，关闭所有层
                        window.location.reload();
                    }
                });
            }
        });
    });

    //删除园区
    $('.del').click(function(){
        var id = $(this).attr('id');
        layer.confirm('确定要删除？', {
          btn: ['确定','取消'], //按钮
          icon:3,
          title:'提示'
        }, function(){
            $.ajax({
                url:"{:url('deltombzone')}",
                type:'post',
                data:{'id':id,'token':'del'},
                dataType:'json',
                success : function(e){
                    if(e.flg ==1){
                        layer.msg(e.msg,{icon:1});
                    }else{
                        layer.msg(e.msg,{icon:1});
                    }
                    window.location.reload();//刷新当前页面.
                }
            });
        }, function(){
            layer.closeAll();
        });
    });

    //启用园区
    $('.start').click(function(){
        var id = $(this).attr('id');
        $.ajax({
            url:"{:url('deltombzone')}",
            type:'post',
            data:{'id':id,'token':'start'},
            dataType:'json',
            success : function(e){
                if(e.flg ==1){
                    layer.msg(e.msg,{icon:1});
                }else{
                    layer.msg(e.msg);
                }
                window.location.reload();//刷新当前页面.
            }
        });
    });
});
</script>
{/block}