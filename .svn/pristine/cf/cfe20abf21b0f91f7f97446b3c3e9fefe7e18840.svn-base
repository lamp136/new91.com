{extend name='extra@main' /}
{block name='layer'}
<div id="close_update_form" style="display: none;padding: 20px;">
    <form class="layui-form layui-form-pane" id="update_bbs_info_form">
        <div class="layui-form-item">
            <div class="layui-input-block">
               <textarea  disabled="disabled" class="layui-textarea closereason" name="delete_reason"></textarea>
            </div>
        </div>
    </form>
</div>
{/block}
{block name='body'}
{block name='body'}
<div class="layui-form" style="margin-left: 10px;margin-top: 10px;">
 <form id="quickForm" method="get" class="form-horizontal" autocomplete="off" action='{:url("backlist")}'>
    <div class="layui-form-item" >
            <div class="layui-input-inline">
                <input type="text" name="storename" autocomplete="off" placeholder="商家名称" value="{$Think.get.storename}" class="layui-input">
            </div> 
            <div class="layui-input-inline">
                <input type="text" name="phone" autocomplete="off" placeholder="手机号" value="{$Think.get.phone}" class="layui-input">
            </div>
            <div class="layui-inline">
                <button class="layui-btn">搜索</button>
            </div>
        </div>
    </form>

    <table class="layui-table">
        <colgroup>
            <col width="10">
            <col width="100">
            <col width="200">
            <col width="80">
            <col width="90">
            <col width="120">
            <col width="120">
            <col width="120">
            <col width="120">
            <col width="100">
            <col width="60">
            <col width="60">
            <col width="40">
            <col width="150">
            <col>
        </colgroup>
        <thead>
            <tr>
                <th><input type="checkbox" name="" lay-skin="primary" lay-filter="allChoose"></th>
                <th>预约人<br>电话</th>
                <th>商家名称</th>
                <th>墓价/佣金/返现</th>
                <th>应退/实退</th>
                <th>佣金支付时间</th>
                <th>申请退单时间</th>
                <th>退单<br>原因</th>
                <th>退单<br>状态</th>
                <th>跟踪人</th>
                <th>跟踪信息</th>
                <th>退单<br>票据</th>
                <th>操作</th>
            </tr> 
        </thead>
        <tbody>
         {volist name="data" id="vo"}
            <tr>
                <td><input type="checkbox"  data-name="choice_id" value=
                "{$vo.id}" lay-skin="primary"></td>
                <td>
                {empty name="vo['buyer']"}
                    {$vo.reservation_person}<br>{$vo.reservation_phone}
                {else /}
                    {$vo.buyer}<br>{$vo.mobile}
                {/empty}
                </td>
                <td>{$vo.store_name}
                    {eq name="vo['store_status']" value="14"}
                        <span title="广告会员" style="color:red;">[广]</span>
                    {/eq}
                    {eq name="vo['store_status']" value="16"}
                        <span title="个人会员" style="color:red;">[个]</span>
                    {/eq}
                    {eq name="vo['store_status']" value="19"}
                        <span title="会员V" style="color:red;">[V]</span>
                    {/eq}
                    {eq name="vo['store_status']" value="20"}
                        <span title="商家会员" style="color:red;">[商]</span>
                    {/eq}
                </td>
                <td>{$vo.tomb_price}<br>{$vo.paid_in_amount}<br>{$vo.return_fact_money}</td>
                
                <td>
                    {notempty name="vo['back_money']"}
                        {$vo.back_money}<br>{$vo.back_fact_money}
                    {/notempty}
                </td>
                <td>
                    {notempty name="vo['payfor_us_time']"}
                        {$vo.payfor_us_time|date='Y-m-d',###}
                    {/notempty}
                </td>
                <td> 
                    {notempty name="vo['back_apply_time']"}
                        {$vo.back_apply_time|date='Y-m-d',###}
                    {/notempty}
                </td>
                <td><button class="layui-btn layui-btn-small layui-btn-danger backreason"  delete-id="{$vo.id}"><i class="layui-icon"></i>查看</button></td>
                <td>{$status[$vo.status]}</td>
                <td>  {volist name="order_flow" id="flowmans"}
                        {if condition="$key eq $vo['order_flow_id'] "}{$flowmans}{/if}
                    {/volist}
                </td>
                <td><a href="{:url('orders/Tomb/detail',array('orderId'=>$vo['id'],'items'=>'reVisit'))}">更新</a></td>
                <td>
                {volist name="list" id="voo"}
                    {if condition="$voo['id'] eq $vo['id']"}
                        {if condition= "$voo['ordergravebill_count'] neq '0'"}
                            <span style="color:red;">有</span>
                            {else /}
                            无
                        {/if}
                    {/if}
                {/volist}
                </td>
                <td> 
                <a href="{:url('orders/Tomb/detail',array('orderId'=>$vo['id'],'items'=>'orderDetail'))}" style="margin-left:10px" title='详细信息'>
                <button class="layui-btn layui-btn-small" ><i class="layui-icon">&#xe615;</i></button>
                </a> 
                </td>
            </tr>
            {/volist}
        </tbody>
    </table> 
</div>
<div style="margin-left:10px;">
{$page}
</div>
{/block}
{block name='optJS'}
<script>


//页面层
layui.use('laydate', function(){
  var laydate = layui.laydate;
  
  var start = {
    min: laydate.now()
    ,max: '2099-06-16 23:59:59'
    ,istoday:true
    ,choose: function(datas){
      end.min = datas; //开始日选好后，重置结束日的最小日期
      end.start = datas //将结束日的初始值设定为开始日
    }
  };
  
  var end = {
    min: laydate.now()
    ,max: '2099-06-16 23:59:59'
    ,istoday: true
    ,choose: function(datas){
      start.max = datas; //结束日选好后，重置开始日的最大日期
    }
  };
  
});
layui.use(['jquery', 'layer'], function(){
    var $ = layui.jquery;
    var layer = layui.layer;
    $(".backspace").bind('click', function(){
         layer.confirm('您确定要撤回删除该订单吗?', {icon: 3, title:'提示'}, function(index){
         var id = $('.backspace').attr('data-orderId');
         $.ajax({
            url:"{:url('backspace')}",
            data:'id='+id,
            type:'post',
            success:function(d){
               var result = eval("("+d+")");
                if(result.flag==1){
                    layer.msg(result.msg);
                    window.location.reload();
                }
            }
         });
         
       });
    });

    //查看退单原因
    $(".backreason").bind('click', function(){
         var id = $(this).attr('delete-id');
         $.ajax({
            url:"{:url('backreason')}",
            data:{'id':id},
            type:'post',
            success:function(d){
                var result = eval("("+d+")");
                if(result.flag==1){
                   $('.closereason').html(result.data);
                }
                layer.open({
                    closeBtn: 2,
                    type: 1,
                    area: '500px',
                    title: '订单关闭原因',
                    content: $('#close_update_form')
                 })
            }

         });   
         
    });
     
});

</script>
{/block}

