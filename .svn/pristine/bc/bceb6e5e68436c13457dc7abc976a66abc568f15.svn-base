{extend name='extra@main' /}
{block name='body'}
<fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
  <legend>商家支付佣金订单</legend>
</fieldset>
<div class="layui-form-item">
    <div class="layui-inline">
          <label class="layui-form-label">商家名称</label>
          <div class="layui-input-inline">
            <input type="tel" name="phone" lay-verify="phone" autocomplete="off" class="layui-input">
          </div>
        </div>
        <div class="layui-inline">
          <label class="layui-form-label">手机号</label>
          <div class="layui-input-inline">
            <input type="text" name="email" lay-verify="email" autocomplete="off" class="layui-input">
          </div>
        </div>
        <div class="layui-inline">
            <button class="layui-btn">搜索</button>
        </div>
    </div>
    <div>
        <button class="layui-btn layui-btn-warm">退单</button>
        <button class="layui-btn layui-btn-normal"><a href="">赠品</a></button>
    </div>

<div class="layui-form">
    <table class="layui-table">
        <colgroup>
            <col width="50">
            <col width="120">
            <col width="150">
            <col width="200">
            <col width="200">
            <col width="100">
            <col width="80">
            <col width="120">
            <col width="300">
            <col>
        </colgroup>
        <thead>
            <tr>
                <th><input type="checkbox" name="" lay-skin="primary" lay-filter="allChoose"></th>
                <th>购买人|电话</th>
                <th>成交时间</th>
                <th>商家名称</th>
                <th>购墓金额|比例|应收</th>
                <th>跟踪人</th>
                <th>跟踪信息</th>
                <th>下单时间</th>
                <th>操作</th>
            </tr> 
        </thead>
        <tbody>
            <tr>
                <td><input type="checkbox" name="" lay-skin="primary"></td>
                <td>贤心  13355673456</td>
                <td>2017-05-30 10:00:00</td>
                <td>北京天寿陵园(商)</td>
                <td>13000|10|1300</td>
                <td>艾鑫</td>
                <td><a href="{:url('/orders/tomb/detail', array('id'=>1))}#test=22">更新</a></td>
                <td><a href="#">2017-10-09</a></td>
                <td>
                    <div class="layui-btn-group">
                    
                        <a href="{:url('orders/tomb/detail', 'id=1')}#items=11"  title='详细信息'>
                            <button class="layui-btn layui-btn-small" ><i class="layui-icon">&#xe615;</i></button>
                        </a>
                        <a  title='票据' id='image' style="margin-left:10px">
                            <button class="layui-btn layui-btn-small  layui-btn-warm" ><i class="layui-icon">票</i></button>
                        </a>
                    </div>
                </td>
            </tr>
        </tbody>
    </table> 
</div>
<div>
    <button class="layui-btn layui-btn-warm">退单</button>
    <button class="layui-btn layui-btn-normal"><a href="">赠品</a></button>
</div>
{/block}

{block name='optJS'}
<script>
layui.use('form', function(){
  var $ = layui.jquery, form = layui.form();
  //全选
  form.on('checkbox(allChoose)', function(data){
    var child = $(data.elem).parents('table').find('tbody input[type="checkbox"]');
    child.each(function(index, item){
      item.checked = data.elem.checked;
    });
    form.render('checkbox');
  });
  
});

//页面层
layui.use(['jquery', 'layer'], function(){
    var $ = layui.jquery;
    var layer = layui.layer;
    $("#image").bind('click', function(){
        layer.open({
            type: 1,
            skin: 'layui-layer-demo', //样式类名
            closeBtn: 2, //不显示关闭按钮
            anim: 2,
            content: '内容'
        })
    });
    
});
</script>
{/block}

