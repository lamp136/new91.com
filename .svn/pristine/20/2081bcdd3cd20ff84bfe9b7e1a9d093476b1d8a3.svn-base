{extend name='extra@main' /}
{block name='body'}
    <!-- contain -->
    <div class="contain contain_pdsize">

        <!-- 面包屑导航 -->
        <div class="breadcrumb">
            <ul>
                <li><a href="index.html">首页</a></li>
                <li class="jt">></li>
                <li>陵园墓地</li>
            </ul>
        </div><!-- breadcrumb End -->
        
        <!-- 左侧内容 -->
        <div class="leftcontain ">

            <!-- 筛选条件 -->
            <div class="sifting">

                <!-- 筛选条件结果显示 -->
                <div class="criteria">
                    <ul>
                        <li class="sif">所有分类</li>
                        <li>></li>
                        <li class="if">昌平区<span></span></li>
                        <li class="if">不限<span></span></li>
                        <li class="number">共<span> 100 </span>结果</li>
                    </ul>
                </div>

                <!--所在区域 -->
                <div class="sifting_main clearfix">
                    <span>所在区域：</span>
                    <ul>
                        <li><a href="#">不限</a></li>
                        <li class="led"><a href="#">昌平区</a></li>
                        <li><a href="#">海淀区</a></li>
                        <li><a href="#">朝阳区</a></li>
                        <li><a href="#">西城区</a></li>
                        <li><a href="#">昌平区</a></li>
                        <li><a href="#">海淀区</a></li>
                        <li><a href="#">朝阳区</a></li>
                        <li><a href="#">西城区</a></li>
                        <li><a href="#">海淀区</a></li>
                        <li><a href="#">朝阳区</a></li>
                        <li><a href="#">海淀区</a></li>
                        <li><a href="#">朝阳区</a></li>
                    </ul>
                </div>

                <!-- 价格区间 -->
                <div class="sifting_main clearfix">
                    <span>价格区间：</span>
                    <ul>
                        <li><a href="#">不限</a></li>
                        <li class="led"><a href="#">免费</a></li>
                        <li><a href="#">2万以下</a></li>
                        <li><a href="#">2-5万</a></li>
                        <li><a href="#">5-10万</a></li>
                        <li><a href="#">10-20万</a></li>
                        <li><a href="#">20万以上</a></li>
                    </ul>                   
                </div>

                <!-- 距离市区 -->
                <div class="sifting_main clearfix">
                    <span>距离市区：</span>
                    <ul>
                        <li><a href="#">不限</a></li>
                        <li><a href="#">10公里</a></li>
                        <li><a href="#">10-20公里</a></li>
                        <li><a href="#">20-50公里</a></li>
                        <li><a href="#">50公里以上</a></li>
                    </ul>
                </div>
                
            </div><!-- sifting筛选条件结束 -->

            <!-- 陵园列表 -->
            <div class="cemetery_list">
                {volist name="list" id="v"}
                    <!-- 陵园内容1 -->
                    <div class="cemetery_list_box">
                        <div class="cemetery_list_main {if $i%10 == 0} last {/if} clearfix">
                            <!-- 图片 -->
                            <div class="cemetery_list_main_img">
                                <a href="{:url('/cemdetail/'.$v.id)}"><img src="http://www.91soumu.com/{$v.image}" alt="{$v.name}"/></a>
                                {eq name="v.status" value="0"}
                                    <span class="ygwicon"></span>
                                {/eq}
                            </div>
                            <!-- 信息 -->
                            <div class="cemetery_list_main_info">
                                <h2 class="clearfix"><a href="cemetery_detail.html">{$v.name}</a><span><i></i>{$v.hits}</span></h2>
                                <div class="address clearfix">
                                    <p><font>陵园地址：</font>{$v.address}</p>
                                    <p class="lookmap"><span><i></i>查看地图</span></p>
                                </div>
                                <ul class="clearfix">
                                    {$v.label}
                                </ul>
                            </div>
                            <!-- 价格 -->
                            <div class="cemetery_list_main_price">
                                <span class="ckj">参考价</span>
                                <p><i>￥</i><span>{$v.min_price}</span>万起</p>
                                <a {eq name="v.status" value="0"} class="buttonhui" {else/} class="buttonlv" {/eq} href="#">预约看墓</a>
                            </div>
                        </div><!-- cemetery_list_main End -->
                    </div><!-- cemetery_list_box 陵园内容 End -->
                {/volist}
                <!-- 分页 -->
                <div class="paging">
                    {$page}
                </div><!-- paging 分页 End -->

            </div><!-- cemetery_list 陵园列表 End -->

        </div><!-- leftcontain End -->
        
        <!-- 右侧内容 -->
        <div class="rightcontain">
            
            <!-- 预约看墓 -->
            <div class="subscribetomb cem_margin_bottom">
                <h2>预约看墓</h2>
                <input class="tet" type="text" value="" placeholder="您的姓名" />
                <input class="tet" type="text" value="" placeholder="您的电话" />
                <a class="yubtn" href="#">立即预约</a>
                <p>免费拨打<span>400-618-9191</span></p>
            </div>
            
            <!-- 陵园排行榜 -->
            <div class="ranking_list cem_margin_bottom">
                <h3>陵园排行榜</h3>
                <div class="ranking_list_main">
                    <h4>排名<span>名称</span></h4>
                    <ul>
                        <li class="first clearfix">
                            <a href="#">
                                <img src="images/ranking_list_img.png"/>
                                <div class="txt">
                                    <h5>北京天寿陵园北京天寿陵园</h5>
                                    <p>￥9800.00<font>起</font></p>
                                </div>
                            </a>
                        </li>
                        <li class="clearfix">
                            <a href="#">
                                <span>2</span>
                                <h5>北京天寿陵园天寿陵园</h5>
                            </a>
                        </li>
                        <li class="clearfix">
                            <a href="#">
                                <span>3</span>
                                <h5>北京天寿陵园天寿陵园天寿</h5>
                            </a>
                        </li>
                        <li class="clearfix">
                            <a href="#">
                                <span>4</span>
                                <h5>北京天寿陵园陵园</h5>
                            </a>
                        </li>
                        <li class="clearfix">
                            <a href="#">
                                <span>5</span>
                                <h5>北京天寿陵园</h5>
                            </a>
                        </li>
                        <li class="clearfix">
                            <a href="#">
                                <span>6</span>
                                <h5>北京天寿陵园</h5>
                            </a>
                        </li>
                    </ul>
                </div>
                <p class="wp">本排行榜根据陵园综合情况不定期更新</p>
            </div><!-- ranking_list 陵园排行榜 End -->
            
            <!--广告位-->
            <div class="advertising cem_margin_bottom">
                <a href="#"><img src="images/advertising_img.jpg"/></a>
            </div> <!-- advertising 广告位 End-->
            
            <!--惠民政策-->
            <div class="policies">
                <h2>惠民政策</h2>
                <ul>
                    <li><a href="#">北京墓地可以用多少年？北京墓地年限问题。</a></li>
                    <li><a href="#">铭记历史缅怀先烈  北京天寿陵园隆重举行</a></li>
                    <li><a href="#">北京天寿首届清明民俗文化节将在天寿</a></li>
                    <li><a href="#">铭记历史缅怀先烈  北京天寿陵园隆重</a></li>
                    <li><a href="#">北京天寿首届清明民俗文化节将在天寿陵园召开</a></li>
                    <li><a href="#">铭记历史缅怀先烈  北京天寿陵园隆重举行</a></li>
                </ul>
            </div><!-- policies 惠民政策 End-->

        </div><!-- leftcontain End -->
        <div class="clear"></div>
    </div><!-- contain End -->
{/block}