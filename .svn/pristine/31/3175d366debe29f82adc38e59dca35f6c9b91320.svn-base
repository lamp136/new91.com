        		</td>
        	</tr>
         {/volist}
        </tbody>
    </table>
        <div style="margin-left: 10px;">
		{$page}
		</div>
</div>

{/block}
{block name='optJS'}
<script>
layui.use(['jquery', 'layer','form'], function(){
	var $ = layui.jquery;
	var layer = layui.layer;
    var form = layui.form();
	//全选
    form.on('checkbox(allChoose)', function(data){
        var child = $(data.elem).parents('table').find('tbody input[type="checkbox"]');
        child.each(function(index, item){
        item.checked = data.elem.checked;
        });
        form.render('checkbox');
    });

     //点击成功按钮弹出模态框
    $('.add').click(function(){
    	 $.ajax({
                url:"{:url('add')}",
                type:'get',
                success:function(o){
                    var result = eval("("+o+")");
                    var region = result['province'];
                    if(result.flag == 1){
                        if(region.length > 0){
                            // 省份多选框
                            provinceBox(region);
                            form.render('checkbox');
                        }
                        layer.open({
			                closeBtn: 2,
			                type: 1,
			                area: '700px',
			                title: '添加友链模态框',
			                content: $('#addForm'),
			            });
                    }
                }
            });
           
     });

     //提交添加友链 表单
    $('#addsubmit').bind('click', function () {
    	var From = $('#addForm').serialize();
        $.ajax({
            url: "{:url('add')}",
            type: "post",
            data:From,
            success: function(d) {
                var result = eval("(" + d + ")");
                if (result.flag == 1) {
                    layer.msg(result.msg,{icon:1,time:2000},function(){
                          window.location.reload();//刷新当前页面.
                      })
                } else {
                    layer.msg(result.msg,{icon:1,time:2000},function(){
                     })
                }
            }
        });
    });


     //修改友链信息
        $('.edit').click(function () {
            var id = $(this).attr('data-id');
            var status = $('#editForm input[name="status"]');
            $('.editsub').val(id);
            $.ajax({
                url: "{:url('edit')}",
                type: 'get',
                data:{
                    id:id,
                },
                success: function (d) {
                    var result = eval("(" + d + ")");
                    var city = result.city;
                    var province = result.province;
                    var data = result.data;
                    if (result.flag == 1) {
                        /**
                         * 省份多选框
                         */
                        provinceBox(province);
                        // 名称
                        $('#editForm input[name="name"]').val(data.name);
                        // url地址
                        $('#editForm input[name="url"]').val(data.url);

                        // 默认选中省份
                        var provinces = data.province_id;
                        $(provinces.split(",")).each(function(index, el) {
                            $('#editForm input:checkbox[value="'+el+'"]').prop('checked',true);
                            form.render('checkbox');
                        });


                        // 排序
                        $('#editForm input[name="sort"]').val(data.sort);
                        // id
                        $('#editForm input[name="id"]').val(data.id);
                        // 状态
                        for (var i = 0; i < status.length; i++) {
                            if(status[i].value == data.status){
                                status[i].checked = true;
                                break;
                            }
                        }
                        
                        layer.open({
			                closeBtn: 2,
			                type: 1,
			                area: '700px',
			                title: '编辑友链模态框',
			                content: $('#editForm'),
			            });
                    } else {
                        layer.alert('操作失败');
                    }
                }
            });
        });



     //提交编辑友链 表单
    $('#editsubmit').bind('click', function () {
    	var From = $('#editForm').serialize();
        $.ajax({
            url: "{:url('edit')}",
            type: "post",
            data:From,
            success: function(d) {
                var result = eval("(" + d + ")");
                if (result.flag == 1) {
                    layer.msg(result.msg,{icon:1,time:2000},function(){
                          window.location.reload();//刷新当前页面.
                      })
                } else {
                    layer.msg(result.msg,{icon:1,time:2000},function(){
                     })
                }
            }
        });
    });

   /**
     * 省份多选框公共函数
     * @param  {object} region 省份
     */
    function provinceBox(region){
        var str = "";
        for (var i = 0; i < region.length; i++) {
            str += "<input type='checkbox' name='province_id[]' value='"+region[i].id+"'/>"+region[i].name+'&nbsp;&nbsp;';
            if(!((i+1)%6)){
                str += '<br/>';
            }
        }
        $('p[data-id="check_box"]').empty().append(str);
    }

     //删除
        $('.delete').click(function(){
            var id = $(this).attr('data-id');
            var act = 'del';
            $.ajax({
                url: "{:url('delete')}",
                type: 'post',
                data: 'id='+id+'&act='+act,
                success: function (d) {
                    var result = eval("(" + d + ")");
                    if (result.flag == 1) {
	                    layer.msg(result.msg,{icon:1,time:2000},function(){
	                          window.location.reload();//刷新当前页面.
	                    })
	                } else {
	                    layer.msg(result.msg,{icon:1,time:2000},function(){
	                    })
	                }
                }
            });
        });

        //启用
        $('.enable').click(function(){
            var id = $(this).attr('data-id');
            var act = 'enable';
            $.ajax({
                url: "{:url('delete')}",
                type: 'post',
                data: 'id='+id+'&act='+act,
                success: function (d) {
                    var result = eval("(" + d + ")");
                    if (result.flag == 1) {
	                    layer.msg(result.msg,{icon:1,time:2000},function(){
	                          window.location.reload();//刷新当前页面.
	                    })
	                } else {
	                    layer.msg(result.msg,{icon:1,time:2000},function(){
	                    })
	                }
                }
            });
        });


});




</script>

{/block}