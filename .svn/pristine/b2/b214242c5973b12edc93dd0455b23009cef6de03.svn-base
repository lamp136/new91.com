{extend name='extra@main' /}
{block name='body'}
    
<!-- banner -->
<div class="help_banner"></div>

<div class="contain clearfix contain_pdsize">
    
    <!-- 帮助中心 nav -->
    <div class="help_nav">
        <div class="help_nav_main">
            <!-- LOGO -->
            <div class="help_nav_logo">
                <img src="_WEB_/images/help_nav_logo.png" alt="LOGO" />
            </div><!-- help_nav_logo End -->
            <div id="help_nav_list" class="help_nav_list">
                <h2><span>91搜墓网<i class="down"></i></span></h2>
                <ul>
                    <li><a href="{:url('help/Help/aboutus')}" title='关于我们'>关于我们</a></li>
                    <li><a href="{:url('help/Help/serviceprocess')}" title='服务流程'>服务流程</a></li>
                    <li><a href="{:url('help/Help/contactus')}" title='联系我们'>联系我们</a></li>
                </ul>
                <h2 class="active"><span>购墓指南<i class="down"></i></span></h2>
                <ul class="show">
                    <li class="led"><a href="{:url('help/Help/tombnotes')}" title="购墓须知">购墓须知</a></li>
                    <li><a href="{:url('help/Help/buyart')}" title="购墓技巧">购墓技巧</a></li>
                    <li><a href="{:url('help/Help/tombprocess')}" title="购墓流程">购墓流程</a></li>
                </ul>
                <h2><span>常见问题<i class="down"></i></span></h2>
                <ul>
                    <li><a href="{:url('help/Help/tombagelimit')}" title="公墓年限">公墓年限</a></li>
                    <li><a href="{:url('help/Help/tombflower')}" title="鲜花祭品">鲜花祭品</a></li>
                    <li><a href="{:url('help/Help/wasburied')}" title="落葬讲究">落葬讲究</a></li>
                    <li><a href="{:url('help/Help/movetomb')}" title="迁坟讲究">迁坟讲究</a></li>
                </ul>
                <h2><span>殡葬文化<i class="down"></i></span></h2>
                <ul>
                    <li><a href="{:url('help/Help/bury')}" title="安葬吉日">安葬吉日</a></li>
                    <li><a href="{:url('article/Article/listbox',['cid'=>$Think.config.article_fengshui_culture],$Think.config.assign_suffix,$Think.config.assign_domain)}" title="墓地风水">墓地风水</a></li>
                    <li><a href="{:url('help/Help/epigraphic')}" title="碑文挽联">碑文挽联</a></li>
                    <li><a href="{:url('help/Help/ghost')}" title="三大鬼节">三大鬼节</a></li>
                </ul>
                <h2><span>平台声明<i class="down"></i></span></h2>
                <ul>
                    <li><a href="{:url('help/Help/copyright')}" title="版权声明">版权声明</a></li>
                    <li><a href="{:url('help/Help/disclaimer')}" title="免责条款">免责条款</a></li>
                    <li><a href="{:url('help/Help/law')}" title="法律声明">法律声明</a></li>
                    <li><a href="{:url('help/Help/privacy')}" title="隐私条款">隐私条款</a></li>
                </ul>
            </div><!-- help_nav_list End -->
        </div><!-- help_nav_main End -->
    </div><!-- help_nav 帮助中心 nav End -->
    
    <!-- 帮助中心右侧 -->
    <div class="help_right help_tombnotes">
        
        <!-- 殡葬百科列表 -->
        <div class="fe_list">

            <!-- 内容1 -->
            {volist name='list' id='vo'}
            <div class="fe_list_box">
                <div class="fe_list_main clearfix">
                    <!-- 图片 -->
                    <div class="fe_list_main_img">
                        <a href="{:url('help/Help/tombnotesDetails',['id'=>$vo.id])}"><img src="{$vo.thumb_url}" alt="{$vo.title}" title='{$vo.title}'/></a>
                    </div>
                    <!-- 右侧内容 -->
                    <div class="fe_list_main_text">
                        <h2><a href="{:url('help/Help/tombnotesDetails',['id'=>$vo.id])}" title='{$vo.title}'>{$vo.title}</a></h2>
                        <p>{$vo.summary}</p>
                        <p class="source">
                            来源：{$vo.source}
                            <span class="time">
                                时间：{$vo.published_time|date="Y-m-d",###}
                                <span class="pageviews">
                                    <i></i>{$vo.hits}
                                </span>
                            </span>
                        </p>
                    </div>
                </div><!-- cemetery_list_main End -->
            </div><!-- fe_list_box 内容 End -->
            {/volist}
            <!-- 分页 -->
            <div class="paging">
               {$page}
            </div><!-- paging 分页 End -->

        </div><!-- cemetery_list 陵园列表 End -->

    </div><!-- help_right 帮助中心右侧 End -->

</div><!-- contain End -->

<!-- 优势 -->
<div class="home_advantage aboutus_advantage">
    <div class="contain">
        <ul>
            <li>
                <img src="_WEB_/images/home_advantage_img1.png"/>
                <h2>信息透明</h2>
                <P>陵园信息全面，价格透明</P>
            </li>
            <li>
                <img src="_WEB_/images/home_advantage_img2.png"/>
                <h2>预约服务</h2>
                <P>线上咨询，电话服务</P>
            </li>
            <li>
                <img src="_WEB_/images/home_advantage_img3.png"/>
                <h2>专业服务</h2>
                <P>专业咨询团队，资深企业</P>
            </li>
            <li>
                <img src="_WEB_/images/home_advantage_img4.png"/>
                <h2>多重优惠</h2>
                <P>多种礼品，享受独家优惠</P>
            </li>
            <li class="last">
                <img src="_WEB_/images/home_advantage_img5.png"/>
                <h2>诚信保障</h2>
                <P>诚信商家，保障服务</P>
            </li>
        </ul>
    </div><!-- contain End -->
</div><!-- 优势 home_advantage End -->
{/block}
{block name='js'}
<script src="_WEB_/js/help.js"></script>
{/block}
    
    