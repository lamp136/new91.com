{block name='optJS'}
<script>
    layui.use(['jquery', 'form'], function() {
    var $ = layui.jquery;
    var form = layui.form();
    
    //添加摸态框
    $('.add').click(function() {
        layer.open({
            closeBtn: 2,
            type: 1,
            area: '500px',
            title: '添加广告位',
            content: $('#add-form'),
        });
    });

    //添加表单提交
    $('#submit').bind('click', function() {
        var str = check('add');
        if(str){
            layer.msg(str);
            return false;
        }
        //加载层
        layer.open({
            type:3,
            success: function(layero, index){  
                var dataFrom = new FormData(document.getElementById("add-form"));
                $.ajax({
                    url: "{:url('add')}",
                    type: 'POST',
                    data: dataFrom,
                    processData: false,
                    contentType: false,
                    dataType: 'json',
                    success: function(d) {
                        layer.close(index);
                        if (d.flag == 1) {
                            layer.msg(d.msg, {icon: 1,time:1000},function(){
                                window.location.reload();
                            });
                        } else {
                            layer.msg(d.msg, {icon: 1});
                        }

                    }
                });
            }
        });
    });

    //编辑广告位
    $('.edit').click(function() {
        var id = $(this).attr('ad_id');
        $.ajax({
            url: "{:url('edit')}",
            type: 'get',
            data: {id:id},
            dataType: 'json',
            success: function(d) {
                if(d.flag==1){
                    var data = d.data;
                    $("#edit-form input[name='info[position_name]']").val(data.position_name);
                    $("#edit-form input[name='info[advertising_width]']").val(data.advertising_width);
                    $("#edit-form input[name='info[advertising_height]']").val(data.advertising_height);
                    $("#edit-form textarea[name='info[position_description]']").val(data.position_description);
                    $("#edit-form input[name='info[id]']").val(data.id);
                    layer.open({
                        closeBtn: 2,
                        type: 1,
                        area: '500px',
                        title: '添加广告位',
                        content: $('#edit-form'),
                    });
                    form.render();
                }else{
                    layer.msg('没有数据');
                }
            }
        });
    });

    //提交修改
     $('#edit-submit').bind('click', function() {
        var str = check('edit');
        if(str){
            layer.msg(str);
            return false;
        }
        //加载层
        layer.open({
            type:3,
            success: function(layero, index){  
                var dataFrom = new FormData(document.getElementById("edit-form"));
                $.ajax({
                    url: "{:url('edit')}",
                    type: 'POST',
                    data: dataFrom,
                    processData: false,
                    contentType: false,
                    dataType: 'json',
                    success: function(d) {
                        layer.close(index);
                        if (d.flag == 1) {
                            layer.msg(d.msg, {icon: 1,time:1000},function(){
                                window.location.reload();
                            });
                        } else {
                            layer.msg(d.msg, {icon: 1});
                        }

                    }
                });
            }
        });
     })

    function check(tag){
        if(tag=='add'){
            var name = $("#add-form input[name='info[position_name]']").val();
            var width = $("#add-form input[name='info[advertising_width]']").val();
            var height = $("#add-form input[name='info[advertising_height]']").val();
        }else{
            var name = $("#edit-form input[name='info[position_name]']").val();
            var width = $("#edit-form input[name='info[advertising_width]']").val();
            var height = $("#edit-form input[name='info[advertising_height]']").val();
        }
        
        if(name.length<1){
            var str = '请填写名称';
            return str;
        }
        if(width.length<1){
            var str ='请填写宽度';
            return str;
        }
         if(height.length<1){
            var str ='请填写高度';
            return str;
        }
    }
});
</script>
{/block}