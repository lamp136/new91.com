{block name='optJS'}
<script>

layui.use(['jquery', 'form'], function() {
    var $ = layui.jquery;
    var form = layui.form();
    //摸态框
    $('.add').click(function() {
        layer.open({
            closeBtn: 2,
            type: 1,
            area: '500px',
            title: '添加图片',
            content: $('#form-add'),
        });
    });
      //放大图片
    $('.zoomIn').click(function(){
        var src = $(this).attr('data-image');
        layer.open({
            closeBtn: 2,
            type: 1, 
            area: ['225','200px'],
            title:'查看图片',
            content: "<img src="+src+" width='100%' height='100%'>"
        });
    });

    //添加表单提交
    $('#submit').bind('click', function() {
        //加载层
        layer.open({
            type:3,
            success: function(layero, index){    
                var dataForm = new FormData(document.getElementById("data-form"));
                $.ajax({
                    url: "{:url('saveAlbum')}",
                    type: 'POST',
                    data: dataForm,
                    processData: false,
                    contentType: false,
                    dataType: 'json',
                    success: function(d) {
                        layer.close(index);
                        if (d.flg == 1) {
                            layer.msg(d.msg, {
                                icon: 1
                            });
                            window.location.reload();
                        } else {
                            layer.msg(d.msg, {
                                icon: 1
                            });
                        }
                    }
                });
            }
        });     
    });

    //修改图片
    $('.update').click(function() {
        var image_id = $(this).attr('image_id');
        $.ajax({
            url: "{:url('editImage')}",
            type: 'get',
            data: {
                id: image_id
            },
            dataType: 'json',
            success: function(d) {
                if (d.flg == 1) {
                    var data = d.msg;
                    $("#form-update input[name='info[set_photo_album_status]'][value=" + data.set_photo_album_status + "]").attr('checked', true);
                    $("#form-update input[name='info[type]'][value=" + data.type + "]").attr('checked', true);
                    $("#form-update input[name='info[title]']").val(data.title);
                    $('#form-update select[name="info[tomb_zone_id]"]').val(data.tomb_zone_id);
                    $("#form-update input[name='info[image_link]']").val(data.image_link);
                    $("#form-update input[name='info[state]'][value=" + data.state + "]").attr('checked', true);
                    $("#form-update input[name='info[sort]']").val(data.sort);
                    $('#form-update img[name="imageurl"]').attr('src', data.thumb_image);
                    $("input[name='image_id']").val(data.id);
                    form.render();

                    layer.open({
                        closeBtn: 2,
                        type: 1,
                        area: '500px',
                        title: '添加图片',
                        content: $('#form-update'),
                    });
                }
            }
        });
    });

    //修改表单提交
    $('#submit-update').bind('click', function() {
        layer.open({
            type:3,
            success: function(layero, index){  
                var dataForm = new FormData(document.getElementById("data-update"));
                $.ajax({
                    url: "{:url('updateImage')}",
                    type: 'POST',
                    data: dataForm,
                    processData: false,
                    contentType: false,
                    dataType: 'json',
                    success: function(d) {
                        layer.close(index);
                        if (d.flg == 1) {
                            layer.msg(d.msg, {
                                icon: 1
                            });
                        } else {
                            layer.msg(d.msg, {
                                icon: 1
                            });
                        }
                        // layer.closeAll(); //疯狂模式，关闭所有层
                        window.location.reload();
                    }
                });
            }
        })
    });

    //单个删除
    $('.del').click(function() {
        var id = $(this).attr('image_id');
        deleteImage(id);
    });

    //批量删除
    $("#batchDel").click(function() {
        var str = '';
        $("input[name='ID_Dele']:checked").each(function() {
            str += ($(this).val() + ',');
        });
        str = str.substring(0, str.lastIndexOf(','));
        if (str == '') {
            layer.msg('请选择一张图片');;
            return;
        }
        deleteImage(str);
    });

    //删除相册
    function deleteImage(id) {
        layer.confirm('确定要删除？', {
            btn: ['确定', '取消'], //按钮
            icon: 3,
            title: '提示'
        }, function() {
            $.ajax({
                url: "{:url('delstart')}",
                type: 'post',
                data: {'id': id},
                dataType: 'json',
                success: function(e) {
                    if (e.flg == 1) {
                        layer.msg(e.msg, {icon: 1});
                    } else {
                        layer.msg(e.msg, {icon: 1});
                    }
                    window.location.reload(); //刷新当前页面.
                }

            });
        }, function() {
            layer.closeAll();
        });
    }

    //全选
    form.on('checkbox(allChoose)', function(data){
        var child = $(data.elem).parents('table').find('tbody input[type="checkbox"]');
        child.each(function(index, item){
          item.checked = data.elem.checked;
        });
        form.render('checkbox');
    })

    //批量添加
    $('#parents').on('click', '.hide', function() {
        var a = $(this);
        var li = $(this).parent();

        if (a.html() == "[+]") {
            var newli = li.clone();
            $(newli).find('a').html("[-]");
            $(newli).find('input').val("");
            li.after(newli);
        } else {
            li.remove();
        }
    })
});
</script>
{/block}