    <div class="contain">
        <ul>
            <li {eq name="path" value="Index"} class="lineheight" {/eq}><a href="{:url('index/Index/index')}">首页</a></li>
            <li {eq name="path" value="Cemetery"} class="lineheight" {/eq}><a href="{:url('cemetery/Cemetery/index')}">陵园墓地</a></li>
            <li {eq name="path" value="Map"} class="lineheight" {/eq}><a href="{:url('cemetery/Map/index')}">地图看墓</a></li>
            <li {eq name="path" value="Funeral"} class="lineheight" {/eq}><a href="{:url('funeral/Funeral/funeral')}">殡仪馆</a></li>
            <li {eq name="path" value="Rite"} class="lineheight" {/eq}><a href="rite.html">殡葬礼仪</a></li>
            <li {eq name="path" value="Ecological"} class="lineheight" {/eq}><a href="{:url('cemetery/Ecological/index')}">生态葬</a></li>
            <li {eq name="path" value="Article"} class="lineheight" {/eq}><a href="{:url('article/Article/index')}">殡葬百科</a></li>
            <li {eq name="path" value=""} class="lineheight" {/eq}><a href="#">91乐融</a></li>

        </ul>
    </div><!-- contain End -->
</div><!-- nav 导航 End -->