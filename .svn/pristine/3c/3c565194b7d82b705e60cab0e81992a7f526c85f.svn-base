                <i>|</i>
                <a href="{:url('login/Login/loginout')}">退出</a>
            {else/}
                <a class="login" href="{:url('login/Login/login')}">登录</a>
                <i>|</i>
                <a href="{:url('login/Login/register')}">免费注册</a>
            {/notempty}
            
        </div>
        <div class="nav_top">
            <ul>
                <li class="scan"><a href="#">我的订单<i class="iconfont icon-iconfontdownjiantou"></i></a>|</li>
                <li class="gwc"><a href="#">购物车<i class="iconfont icon-iconfontdownjiantou"></i></a>|</li>
                <li><a href="{:url('/user')}">个人中心<i class="iconfont icon-iconfontdownjiantou"></i></a>|</li>
                <li><a href="{:url('help/Help/contactus')}">帮助中心</a>|</li>
