{extend name='extra@main' /}
{block name="body"}
<div style="width:100%;height:50px;border-bottom:1px solid #E2E2E2;line-height:50px;padding-left:30px">
    <span class="layui-breadcrumb" style="font-size:20px">
        <a href="/">首页</a>
        <a href="javascript:;">商家推荐列表</a>
    </span>
</div>
<div class="layui-form" style="margin-top: 10px;margin-left: 10px;">
    <form method="get" action="{:url('store/Basestore/recommendlist')}">
        <div class="layui-form-item">
            {php}
                if(showHandle('store/Basestore/recommendadd')){
            {/php}
                <div class="layui-inline">
                    <a href="{:url('recommendadd')}" class="layui-btn">添加</a>
                </div>
            {php}
                }
            {/php}
            <div class="layui-inline">
                <select name="province" lay-filter="province">
                    <option value="0">--选择省--</option>
                    {volist name="province" id="p"}
                        <option value="{$key}" {eq name="Think.get.province" value="$key"} selected="selected" {/eq}>{$p}</option>
                    {/volist}
                </select>
            </div>
            <div class="layui-inline">
                <select name="city">
                    <option value="0">--选择市--</option>
                    {volist name="city" id="c"}
                        <option value="{$key}" {eq name="Think.get.city" value="$key"} selected="selected" {/eq}>{$c}</option>
                    {/volist}
                </select>
            </div>
            <div class="layui-inline">
                <select name="category">
                    <option value="0">--商家分类--</option>
                        {volist name="category" id="vo"}
                            <option value="{$key}" {eq name="Think.get.category" value="$key"} selected="selected" {/eq}>{$vo}</option>
                        {/volist}
                </select>
            </div>
            <div class="layui-inline">
                <select name="feature">
                    <option value="0">--位置--</option>
                    {volist name="recommend" id="vo"}
                        <option value="{$key}" {eq name="Think.get.feature" value="$key"} selected="selected" {/eq}>{$vo}</option>
                    {/volist}
                </select>
            </div>
            <div class="layui-inline">
                <button class="layui-btn layui-btn-normal">搜索</button>
            </div>
        </div>
    </form>
    <table class="layui-table">
        <colgroup>
            <col width="110">
            <col width="80">
            <col width="50">
            <col width="50">
            <col width="60">
            <col width="60">
            <col width="60">
            <col width="60">
        </colgroup>
        <thead>
            <tr> 
                <th>商家名称</th>
                <th>商家类型</th>
                <th>省份</th>
                <th>地区</th>
                <th>显示位置</th>
                <th>排序</th>
                <th>创建时间</th>
                <th>操作</th>
            </tr> 
        </thead>
        <tbody>
            {volist name="data" id="vo"}
                <tr>
                    <td>{$vo.store['name']}</td>
                    <td>{$vo.category_name}</td>
                    <td>{$vo.province_name}</td>
                    <td>{$vo.city_name}</td>
                    <td>{$vo.feature_name}</td>
                    <td>{$vo.sort}</td>
                    <td>{$vo.created_time}</td>
                    <td>
                        {php}
                            if(showHandle('store/Basestore/recommenddel')){
                        {/php}
                            <button class="layui-btn layui-btn-small recommenddel" store-id="{$vo.store_id}" category-id="{$vo.category_id}" city-id="{$vo.city_id}" feature="{$vo.feature}">删除</button>
                        {php}
                            }
                        {/php}
                    </td>
                </tr>
            {/volist}
        </tbody>
    </table>
    {$page}
</div>
{/block}
{block name="layer"}

{/block}
{block name="optJS"}
    <script>
        layui.use(['jquery', 'layer', 'form'], function() {
            var $ = layui.jquery,layer = layui.layer,form = layui.form();
            //添加省市联动
            form.on('select(province)', function(data) {
                var provinceId = data['value'];
                if(provinceId){
                    $.ajax({
                        url: "{:url('getRegion')}",
                        type: 'get',
                        data: {id:provinceId},
                        dataType: 'json',
                        success: function(jsonData) {
                            var c = '<option value="">请选择市</option>';
                            if (jsonData) {
                                if (jsonData['code'] == 1) {
                                    var data = jsonData['data'];
                                    $.each(data, function(key, val) {
                                        c += '<option value="' + key + '">' + val + '</option>';
                                    });
                                }
                            }
                            $('select[name="city"]').empty().append(c);
                            form.render();
                        }
                    });
                }else {
                    window.location.reload();//刷新当前页面.
                }
            });
        
            //删除数据 
            $('.recommenddel').click(function(){
                var store_id = $(this).attr('store-id');
                var category_id = $(this).attr('category-id');
                var city_id = $(this).attr('city-id');
                var feature = $(this).attr('feature');
                layer.open({
                    type:3,
                    success: function(layero, index){  
                        $.ajax({
                            url:"{:url('recommenddel')}",
                            type:'post',
                            data:{'store_id':store_id,'category_id':category_id,'city_id':city_id,'feature':feature},
                            success:function(d){
                                var res = eval("(" + d + ")");
                                layer.msg(res.msg);
                                window.location.reload();//刷新当前页面.
                            }
                        });
                    }
                });
            });
        });
    </script>
{/block}