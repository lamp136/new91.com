     * @param string $pwd 用户输入的数据
     *
     * @return string
     */
  function encryptAdmin($pwd) {
        $prefix = substr(md5(config("a_prefix")), 0, 16);
        $suffix = substr(md5(config("a_suffix")), 0, 16);

        $encryptAPwd = md5($prefix.md5($pwd).$suffix);

        return $encryptAPwd;
    }

